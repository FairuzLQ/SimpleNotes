<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="12dp"
    android:background="@drawable/not_too_rounded_corner"
    android:backgroundTint="@color/primary"
    >

    <TextView
        android:id="@+id/recycler_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul Catatan"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginVertical="4dp"
        />
    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/recycler_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi dari note, isi catatan"
        android:maxLines="2"
        android:textSize="16sp"
        android:ellipsize="end"
        android:layout_marginVertical="4dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/recycler_waktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rabu, 19 Januari 2023"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginVertical="4dp"
        android:gravity="right"
        />


</LinearLayout>